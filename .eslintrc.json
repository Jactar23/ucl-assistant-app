{
  "extends": [
    "airbnb",
    "plugin:react-native/all",
    "plugin:import/errors",
    "plugin:import/warnings",
    "plugin:security/recommended"
  ],
  "parser": "babel-eslint",
  "env": {
    "react-native/react-native": true
  },
  "parserOptions": {
    "ecmaVersion": 8,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "react",
    "react-native",
    "jsx-a11y",
    "import",
    "security",
    "no-secrets",
    "json"
  ],
  "globals": {
    "__DEV__": true
  },
  "rules": {
    "semi": [
      "error",
      "never"
    ],
    "global-require": "off",
    "quotes": [
      "error",
      "backtick"
    ],
    "no-console": "off",
    "react/jsx-filename-extension": "off",
    "jsx-a11y/accessible-emoji": "off",
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "react-native/no-raw-text": "off",
    "jsx-a11y/anchor-is-valid": "off",
    "no-secrets/no-secrets": "error"
  },
  "overrides": [
    {
      "files": [
        "**/__tests__/*.{js,jsx}",
        "*.test.js"
      ],
      "env": {
        "jest": true
      }
    },
    {
      "files": [
        "**/*-stories.js"
      ],
      "rules": {
        "import/no-extraneous-dependencies": [
          "error",
          {
            "devDependencies": true,
            "optionalDependencies": false,
            "peerDependencies": false
          }
        ],
        "no-console": "warn"
      }
    }
  ],
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [
          ".js",
          ".jsx",
          ".android.js",
          ".ios.js"
        ]
      }
    }
  }
}